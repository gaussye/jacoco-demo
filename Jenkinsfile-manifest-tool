pipeline {
    agent none
    stages {
      stage('Manifest'){
        agent {
             kubernetes {
               yamlFile 'Jenkins-manifest-tool.yaml'
             }
        }
        steps {
          container('manifest-tool') {
             sh 'docker-credential-ecr-login list'

             sh '''
             export repoid=$(jq .Registries /root/.ecr/cache.json  | jq keys[0])
             export AuthorizationToken=$(jq --arg repoid $repoid .Registries.$repoid.AuthorizationToken /root/.ecr/cache.json)
             export ProxyEndpoint=$(jq --arg repoid $repoid .Registries.$repoid.ProxyEndpoint /root/.ecr/cache.json)
             mkdir /root/.docker
             cat<<EOF> /root/.docker/config.json
                {
                       "auths": {
                               $ProxyEndpoint: {
                                        "auth": $AuthorizationToken
                               }
                       }
                }
                EOF
             '''
   
             sh '/go/src/github.com/manifest-tool/manifest-tool push from-args --platforms linux/amd64,linux/arm64 --template 899578970796.dkr.ecr.ap-southeast-1.amazonaws.com/java-demo:202310-02-ARCHVARIANT --target 899578970796.dkr.ecr.ap-southeast-1.amazonaws.com/java-demo:202310-02'
          }
        }
      }
    }
}
