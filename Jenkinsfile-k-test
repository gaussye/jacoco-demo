pipeline {
    agent none
    stages {
      stage('Build'){
        parallel {
          stage("Build for AMD64 platform") {
              agent {
                 kubernetes {
                   yamlFile 'Jenkins-kaniko-amd64.yaml'
                 }
              }
              steps {
                container('kaniko') {
                   sh './build-kaniko.sh'
              }
            }
        }
      }
    }
}
